<Window x:Class="Assisticant.Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assisticant.Sample"
		xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
		d:DataContext="{d:DesignInstance local:VM, IsDesignTimeCreatable=True}">
	<Grid>
		<StackPanel>
			<xctk:CheckComboBox Grid.Column="1"
								ItemsSource="{Binding AllNumbers}"
								Delimiter=","
								SelectedItemsOverride="{Binding SelectedNumbers}"
								IsSelectAllActive="true"/>
			<TextBlock Text="{Binding SelectedNumbersText}"/>
			<TextBox Text="{Binding Num, UpdateSourceTrigger=PropertyChanged}"/>
			<TextBlock Text="{Binding NumStr}"/>
		</StackPanel>
	</Grid>
</Window>
